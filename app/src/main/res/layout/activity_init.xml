<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/mainBackground"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progress_bar_horizontal_top_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progress_bar_horizontal_bottom_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progress_bar_vertical_left_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progress_bar_vertical_right_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline"
        app:layout_constraintGuide_percent=".05"
        android:orientation="vertical"/>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline"
        app:layout_constraintGuide_percent=".03"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline"
        app:layout_constraintGuide_percent=".33"
        android:orientation="horizontal"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_spacing_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_left_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.495" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_right_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/botton_horizontal_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_spacing_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_horizontal_guidance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />




    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/title_horizontal_guidance"
        android:textColor="@color/mainBackground"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        />

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mrl_rippleColor="@color/shadow"
        app:mrl_rippleOverlay="true"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/center_left_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline">
    <Button
        android:id="@+id/buttonNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/center_left_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline"
        android:background="@color/mainBackground"
        android:clickable="true"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />
    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/botton_horizontal_guidline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/center_left_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline2"
        app:mrl_rippleColor="@color/shadow"
        app:mrl_rippleOverlay="true"
        >
    <Button
        android:id="@+id/buttonContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/botton_horizontal_guidline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/center_left_vertical_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline2"

        android:background="@color/mainBackground"
        android:scaleType="fitXY"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="invisible"
        />
    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mrl_rippleColor="@color/shadow"
        app:mrl_rippleOverlay="true"
        app:layout_constraintBottom_toBottomOf="@+id/botton_horizontal_guidline"
        app:layout_constraintLeft_toLeftOf="@+id/center_right_vertical_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline3">

    <Button
        android:id="@+id/buttonWork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/botton_horizontal_guidline"
        app:layout_constraintLeft_toLeftOf="@+id/center_right_vertical_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline3"
        android:background="@color/mainBackground"
        android:scaleType="fitXY"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:mrl_rippleColor="@color/shadow"
        app:mrl_rippleOverlay="true"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/center_right_vertical_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline">
    <Button
        android:id="@+id/buttonBlog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/center_right_vertical_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/horizontal_spacing_guideline"
        android:background="@color/mainBackground"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />

    </com.balysv.materialripple.MaterialRippleLayout>

    <TextView
        android:id="@+id/Error_Message_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_spacing_guideline2"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        android:scaleType="fitXY"
        android:textStyle="bold"
        android:textSize="30dp"
        app:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:visibility="invisible"
        />

    <ProgressBar
        android:id="@+id/image_loading_progress_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/progress_bar_vertical_left_guidline"
        app:layout_constraintRight_toRightOf="@id/progress_bar_vertical_right_guidline"
        app:layout_constraintTop_toTopOf="@id/progress_bar_horizontal_top_guidline"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar_horizontal_bottom_guidline"
        />





</androidx.constraintlayout.widget.ConstraintLayout>